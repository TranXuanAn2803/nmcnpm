

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form action="/PhieuXuat/add" method="post" role="form" enctype="application/x-www-form-urlencoded">
                <legend>Login</legend>
                <p style="color: red">{{err}}</p>

                <div class="form-group">
                    <label for="DaiLy">Dai Ly</label>
                    <input type="text" class="form-control" name="DaiLy" id="DaiLy" required placeholder="User Name"/>
                </div>
                <div class="form-group">
                    <label for="Date">Date</label>
                    <input type="tel" class="form-control" name="Date" id="Date"  placeholder="User Name"/>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>