<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form action="/CT_PhieuXuat/add" method="post" role="form"  enctype="application/x-www-form-urlencoded">
                <legend>Login</legend>
                <p style="color: red">{{err}}</p>
                <div class="form-group">
                    <label for="HangHoa">Phieu Xuat</label>
                    <input type="text" class="form-control" name="PhieuXuat" id="PhieuXuat" readonly="readonly"/>
                </div>

                <div class="form-group">
                    <label for="HangHoa">Hang Hoa</label>
                    <input type="text" class="form-control" name="HangHoa" id="HangHoa" required placeholder="User Name"/>
                </div>
                <div class="form-group">
                    <label for="Date">Number</label>
                    <input type="number" class="form-control" required  name="Number" id="Number" placeholder="Password"/>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>
<script type="text/javascript"> 
  document.getElementById("PhieuXuat").value ={{id}};
</script>
