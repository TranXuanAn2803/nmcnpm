<div class="container center-block" style="width:500px">
        {{#if message}}
            <div class="alert alert-danger">
               <div>{{message}}</div>
            </div>
        {{/if}}
            <div class="panel panel-primary">
                <div class="panel-body">
                    <form  action="/LoaiDaiLy/edit/{{ID}}" method="post">
                        <div class="form-group">
                                <label>Tên</label>
                                <input type="text" class="form-control" name="Name" readonly value={{Name}} />
                        </div>



                        <div class="form-group">
                                <label>Nợ Tối Đa</label>
                                <input type="text" class="form-control" name="Max_debt" id="Max_debt" required value={{Max_debt}}
                                />
                        </div>
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-default waves-effect m-l-5">
                                    Reset
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
</div>