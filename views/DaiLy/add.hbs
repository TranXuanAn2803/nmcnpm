<div class="container center-block" style="width:500px">
        {{#if message}}
            <div class="alert alert-danger">
               <div>{{message}}</div>
            </div>
        {{/if}}
            <div class="panel panel-primary">
                <div class="panel-body">
                    <form  action="/DaiLy/add" method="post">
                        <div class="form-group">
                                <label>Tên</label>
                                <input type="text" class="form-control" name="Name" required placeholder="Type something"/>
                        </div>

                        <div class="form-group">
                                <label>Loại</label>

                                <select name="Type" id="Type" class="form-control">

                                    {{#each loaiDaiLy}}
                                        <option value="{{Name}}">{{Name}}</option>
                                    {{/each}}
                                </select>
                        </div>
                        <div class="form-group">
                                <label>Số Điện Thoại</label>
                                <input type="tel" class="form-control" name="Phone"  placeholder="Type your phone"/>
                        </div>
                        <div class="form-group">
                                <label>Quận</label>
                                <input type="text" class="form-control" name="District" required placeholder="Type something"/>
                        </div>

                        <div class="form-group">
                                <label>Địa chỉ</label>
                                <input type="text" class="form-control" name="Address"  placeholder="Type something"/>
                        </div>
                        <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" name="Email"  placeholder="Type something"/>
                        </div>

                        
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-default waves-effect m-l-5">
                                    Reset
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
</div>