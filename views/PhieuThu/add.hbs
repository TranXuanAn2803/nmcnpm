<div class="container center-block" style="width:500px">
        {{#if message}}
            <div class="alert alert-danger">
               <div>{{message}}</div>
            </div>
        {{/if}}
            <div class="panel panel-primary">
                <div class="panel-body">
                    <form  action="/PhieuThu/add" method="post">

                        <div class="form-group">
                                <label>Đại Lý</label>

                                <select name="DaiLy_ID" id="DaiLy_ID" class="form-control" required>

                                    {{#each daiLy}}
                                        <option value="{{ID}}">{{ID}}</option>
                                    {{/each}}
                                </select>
                        </div>
                        <div class="form-group">
                            <label>Ngày Thu</label>
                            <div>
                                <div class="input-group">
                                    <input type="text" class="form-control" name="Date" required  id="datepicker">
                                    <span class="input-group-addon bg-custom b-0"><i class="mdi mdi-calendar text-white"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                <label>Địa Chỉ</label>
                                <input type="text" class="form-control" name="Address"  placeholder="Type something"/>
                        </div>

                        <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" name="Email"  placeholder="Type something"/>
                        </div>
                        <div class="form-group">
                            <label>Tổng Tiền</label>
                            <div>
                                <input type="text" class="form-control" name="Total_Money" required
                                         placeholder="Type Some Mumber."/>
                            </div>
                        </div>

                        
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-default waves-effect m-l-5">
                                    Reset
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
</div>