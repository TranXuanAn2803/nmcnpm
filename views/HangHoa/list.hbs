<div class="container">
  <div style="display:flex; justify-content:flex-end">
    <a href="/HangHoa/add" style="color:white;"><button
        type="button"
        class="btn btn-primary waves-effect waves-light"
        style="margin-bottom: 10px;"
      >Thêm Loại Hàng Hóa</button></a>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <div class="panel-body">

          <table
            id="datatable-fixed-header"
            class="table table-striped table-bordered"
          >
            <thead>
              <tr>
                <th class="text-center">Tên</th>
                <th class="text-center" style="width:15%">Đơn Vị</th>
                <th class="text-center">Giá</th>

              </tr>
            </thead>

            <tbody>
              {{#each hangHoa}}
                <tr>
                  <td> <a href="/HangHoa/{{ID}}">{{Name}}</a></td>
                  <td> <a href="/HangHoa/{{ID}}">{{Unit}}</a></td>
                  <td> <a href="/HangHoa/{{ID}}">{{Price}}</a></td>

                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>