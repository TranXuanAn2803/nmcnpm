<div class="container center-block" style="width:500px">
        {{#if message}}
            <div class="alert alert-danger">
               <div>{{message}}</div>
            </div>
        {{/if}}
            <div class="panel panel-primary">
                <div class="panel-body">
                    <form  action="/HangHoa/add" method="post">
                        <div class="form-group">
                                <label>Tên</label>
                                <input type="text" class="form-control" name="Name" required placeholder="Type something"/>
                        </div>

                        <div class="form-group">
                                <label>Đơn Vị</label>
                                <input type="text" class="form-control" name="Unit" required placeholder="Type something"/>
                        </div>
                        <div class="form-group">
                                <label>Giá</label>
                                <input type="text" class="form-control" name="Price" required placeholder="Type something"/>
                        </div>
                        
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-default waves-effect m-l-5">
                                    Reset
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
</div>